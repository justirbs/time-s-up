// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Theme {
  id    Int     @default(autoincrement()) @id
  name  String  @unique
  cards Card[]
}

model Card {
  id        Int      @default(autoincrement()) @id
  nom       String   @unique
  theme     Theme?   @relation(fields: [themeId], references: [id])
  themeId   Int?
}